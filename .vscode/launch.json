{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go: HTTP Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/cmd/server",
      "args": [
        "-config",
        "configs/config.yml"
      ],
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Go: WebSocket Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/cmd/websocket-server",
      "args": [
        "-config",
        "configs/config.yml"
      ],
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Debug Go App (Local)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/cmd/server",
      "args": [
        "-config",
        "${workspaceFolder}/backend/configs/config.yml"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "ENVIRONMENT": "development",
        "LOG_LEVEL": "debug"
      },
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Go App (Test Config)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/cmd/server",
      "args": [
        "-config",
        "${workspaceFolder}/backend/configs/config.test.yml"
      ],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "ENVIRONMENT": "test",
        "LOG_LEVEL": "debug"
      },
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Go Tests",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/backend",
      "cwd": "${workspaceFolder}/backend",
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Data Importer",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/cmd/data-importer",
      "cwd": "${workspaceFolder}/backend",
      "showLog": true,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Dev: API + WS",
      "configurations": [
        "Go: HTTP Server",
        "Go: WebSocket Server"
      ],
      "stopAll": true
    }
  ]
}