FROM golang:1.24-alpine

# Install git, ca-certificates, and postgresql-client for data import
RUN apk add --no-cache git ca-certificates postgresql-client

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Expose ports
EXPOSE 8080 2345

# Run the application directly with config
CMD ["go", "run", "./cmd/server/main.go", "-config", "./configs/docker.env"]